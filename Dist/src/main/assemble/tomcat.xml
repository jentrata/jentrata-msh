			</binaries>
		</moduleSet>
		-->
		
		<!-- Disabled AS2 Plus plugins hk.hku.cecid.edi.as2plus.admin plugin 
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
