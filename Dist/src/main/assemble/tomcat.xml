		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jentrata.msh.plugins:jentrata-validation</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/org.jentrata.validation</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
