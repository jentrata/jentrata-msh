			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jentrata.msh.plugins:jentrata-corvus-main</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-main-admin</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-admin</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-jms</include>
				<!--include>org.jentrata.msh.plugins:jentrata-validation</include-->
				<include>org.jentrata.msh.plugins:jentrata-corvus-ebms</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-ebms-admin</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-as2</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-as2-admin</include>
				<!--  Disabled AS2 Plus plugins
				<include>org.jentrata.msh.plugins:jentrata-corvus-as2-plus</include>
				<include>org.jentrata.msh.plugins:jentrata-corvus-as2-plus-admin</include>
				-->
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>true</unpack>
				<unpackOptions>
					<includes>
						<include>plugins/**</include>
					</includes>
					<filtered>true</filtered>
				</unpackOptions>
				<includeDependencies>false</includeDependencies>
				<directoryMode>755</directoryMode>
				<fileMode>755</fileMode>
			</binaries>
		</moduleSet>
		
