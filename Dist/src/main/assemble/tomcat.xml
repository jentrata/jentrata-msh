				<dependencySets>
					<dependencySet>
                        <outputDirectory>plugins/hk.hku.cecid.edi.as2.admin/lib</outputDirectory>
						<includes>
							<include>commons-fileupload:commons-fileupload</include>
                            <include>commons-io:commons-io</include>
						</includes>
					</dependencySet>
				</dependencySets>
				<outputFileNameMapping>corvus-as2-admin.jar</outputFileNameMapping>
				<directoryMode>755</directoryMode>
				<fileMode>755</fileMode>
			</binaries>
		</moduleSet>
		
		<!-- Disabled AS2 Plus plugins hk.hku.cecid.edi.as2plus plugin 
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.jentrata.msh.plugins:jentrata-corvus-as2-plus</include>
			</includes>
